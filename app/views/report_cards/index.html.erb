<h1>Report Cards</h1>

<div class="filter-controls">
  <%= form_with url: report_cards_path, method: :get, local: true do |f| %>
    <label for="month_year">Filter by Month:</label>
    <%= f.select :month_year, 
        options_for_select(@available_months.map { |m| [Date.parse("#{m}-01").strftime("%B %Y"), m] }, @selected_month),
        {},
        { id: "month_year", onchange: "this.form.submit();" } %>
  <% end %>
</div>

<div class="report-cards-list">
  <% @report_cards.each do |report_card| %>
    <div class="report-card-item">
      <h3><%= link_to report_card.student_name, report_card_path(report_card.uuid) %></h3>
      <p>
        <strong>Grade Level:</strong> <%= report_card.grade_level %> |
        <strong>Term:</strong> <%= report_card.term %> |
        <strong>Type:</strong> <%= report_card.report_card_type.titleize %>
      </p>
      <p><strong>UUID:</strong> <%= report_card.uuid %></p>
    </div>
  <% end %>
</div>

<style>
  .filter-controls {
    max-width: 800px;
    margin: 20px auto;
    padding: 15px;
    background-color: #f0f0f0;
    border-radius: 5px;
  }
  
  .filter-controls label {
    margin-right: 10px;
    font-weight: bold;
  }
  
  .filter-controls select {
    padding: 5px 10px;
    border: 1px solid #ccc;
    border-radius: 3px;
    font-size: 14px;
  }
  
  .report-cards-list {
    max-width: 800px;
    margin: 20px auto;
  }
  
  .report-card-item {
    border: 1px solid #ddd;
    padding: 15px;
    margin-bottom: 15px;
    border-radius: 5px;
    background-color: #f9f9f9;
  }
  
  .report-card-item h3 {
    margin-top: 0;
  }
  
  .report-card-item a {
    color: #0066cc;
    text-decoration: none;
  }
  
  .report-card-item a:hover {
    text-decoration: underline;
  }
</style>
